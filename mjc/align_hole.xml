<mujoco>
  <option timestep="0.002" />

  <!-- visual -->
  <visual>
    <global offwidth="2560" offheight="1440" />
  </visual>

  <!-- asset -->
  <asset>
    <mesh file="part.obj" />
  </asset>

  <worldbody>
    <!-- light -->
    <!-- <light name="light" pos="0 0 3" dir="0 0 -1" directional="true" castshadow="false" /> -->

    <!-- part  -->
    <body name="part" pos="0 0 0" euler="90 0 0">
      <geom type="mesh" mesh="part" />

      <!-- camera for light test -->
      <!-- <body name="camera" pos="0 0.1 0" euler="-90 0 0" gravcomp="1">
        <light directional="true" />
        <geom type="box" pos="0 0 0.01" size="0.01 0.01 0.01" rgba="1 0.64 0 1" />
        <camera name="camera" fovy="25" />
        <joint name="camera_yaw" type="hinge" axis="0 1 0" pos="0 0 -0.1" />
        <joint name="camera_pitch" type="hinge" axis="1 0 0" pos="0 0 -0.1" />
      </body> -->
    </body>

    <!-- camera -->
    <body name="camera" pos="0 0 0.1" gravcomp="1">
      <light directional="true" />
      <geom type="box" pos="0 0 0" size="0.01 0.01 0.01" rgba="1 0.64 0 1" />
      <camera name="camera" fovy="30" />
      <joint name="camera_x" type="slide" axis="1 0 0" range="-1 1" />
      <joint name="camera_y" type="slide" axis="0 1 0" />
      <joint name="camera_z" type="slide" axis="0 0 1" />
      <joint name="camera_yaw" type="hinge" axis="0 1 0" />
      <joint name="camera_pitch" type="hinge" axis="1 0 0" />
    </body>
  </worldbody>

  <!-- actuator -->
   <actuator>
    <position name="camera_x" joint="camera_x" kp="100" />
    <position name="camera_y" joint="camera_y" />
    <position name="camera_z" joint="camera_z" />
    <position name="camera_yaw" joint="camera_yaw" />
    <position name="camera_pitch" joint="camera_pitch" />
   </actuator>

</mujoco>